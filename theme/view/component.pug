mixin header()
    title SEASON eForm Platform

    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, viewport-fit=cover')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    meta(name='msapplication-TileColor' content='#206bc4')
    meta(name='theme-color' content='#206bc4')
    meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='mobile-web-app-capable' content='yes')
    meta(name='HandheldFriendly' content='True')
    meta(name='MobileOptimized' content='320')

    link(rel="shortcut icon" href="/resources/img/icon.ico")
    link(data-n-head="ssr" rel="apple-touch-icon" href="/resources/img/icon_g.png")

    //- fontawesome
    link(href='/resources/form/theme/libs/fontawesome/css/all.min.css' rel='stylesheet') 

    script(src='/resources/form/theme/libs/tabler/dist/libs/jquery/dist/jquery.slim.min.js')
    script(src='/resources/form/theme/libs/jquery/jquery-3.5.1.min.js')
    script(src='/resources/form/theme/libs/moment/moment-with-locales.min.js')

    //- tabler
    link(href='/resources/form/theme/libs/tabler/dist/css/tabler.min.css' rel='stylesheet')
    link(href='/resources/form/theme/libs/tabler/dist/css/tabler-flags.min.css' rel='stylesheet')
    link(href='/resources/form/theme/libs/tabler/dist/css/tabler-payments.min.css' rel='stylesheet')
    link(href='/resources/form/theme/libs/tabler/dist/css/tabler-buttons.min.css' rel='stylesheet')
    link(href='/resources/form/theme/libs/tabler/dist/css/demo.min.css' rel='stylesheet')

    //- chartjs
    script(src='/resources/form/theme/libs/chartjs/Chart.min.js')

    //- toastr
    link(href='/resources/form/theme/libs/toastr/build/toastr.min.css' rel='stylesheet')
    script(src='/resources/form/theme/libs/toastr/build/toastr.min.js')

    //- prism
    link(href='/resources/form/theme/libs/prism/prism.css' rel='stylesheet')
    script(src='/resources/form/theme/libs/prism/prism.js')

    //- tinymce
    script(src='/resources/form/theme/libs/tinymce/tinymce.min.js')

    //- angular
    script(src='/resources/form/theme/libs/angular/angular.min.js')
    script(src='/resources/form/theme/libs/angular/angular-sanitize.js')
    script(src='/resources/form/theme/libs/angular/ui-monaco.js')

    //- theme
    link(href='/resources/form/theme/less/theme.less' rel='stylesheet')

    script(src='/resources/form/theme/js/base.js')
    script(src='/resources/form/theme/js/drag.js')
    script(src='/resources/form/theme/js/shortcut.js')
    script(src='/resources/form/theme/js/app.js')
    
mixin builder()
    - each url in css
        link(href='/resources/{$ url $}' rel='stylesheet')
        
    - each k in exportjs
        script(type='text/javascript').
            var {$ k $} = {$ exportjs[k] $};

    - each url in js
        script(src='/resources/{$ url $}')

    script(src='/resources/form/theme/js/build.js')